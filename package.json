{
  "name": "sarigama-app",
  "version": "1.0.0",
  "description": "Sarigama electron app",
  "private": true,
  "main": "app/index.js",
  "scripts": {
    "clean": "rimraf dist build app",
    "build": "tsc",
    "make": "ts-node build.ts",
    "build-app": "npm run make",
    "makeIcon": "bash makeIcon.sh",
    "assets": "cp assets/* app && cp package.json app",
    "dmg": "electron-installer-dmg ./Sarigama-darwin-x64/Sarigama.app Sarigama",
    "prebuild-app": "npm run clean && npm run build && npm run makeIcon"
  },
  "author": "Gaspard Bucher <gaspard@lucidogen.io> (http://lucidogen.io)",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "electron": "^8.1.1",
    "electron-builder": "22.4.1",
    "electron-notarize": "^0.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "7.0.1",
    "typescript": "^3.8.3"
  }
}
