  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "electron": "^8.1.1",
    "electron-builder": "22.4.1",
    "electron-notarize": "^0.2.1",
    "png-to-ico": "^2.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "7.0.1",
    "typescript": "^3.8.3"
  }
