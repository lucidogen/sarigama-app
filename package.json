{
  "name": "sarigama-app",
  "version": "2.0.2",
  "description": "Sarigama electron app",
  "private": true,
  "main": "app/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucidogen/sarigama-app"
  },
  "scripts": {
    "clean": "rimraf dist app",
    "start": "electron app",
    "prestart": "npm run compile",
    "compile": "tsc",
    "precompile": "npm run clean",
    "build": "ts-node build.ts",
    "prebuild": "npm run compile",
    "deploy": "ts-node build.ts deploy",
    "predeploy": "npm run compile",
    "makeIcon": "bash makeIcon.sh",
    "postmakeIcon": "png-to-ico build/icon.png > build/icon.ico",
    "assets": "cp assets/* app && cp package.json app"
  },
  "author": "Gaspard Bucher <gaspard@lucidogen.io> (http://lucidogen.io)",
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^4.3.5",
    "electron-log": "^4.3.0",
    "platform-folders": "^0.5.2",
    "sanitize-filename-ts": "^1.0.2"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "electron-notarize": "^1.0.0",
    "png-to-ico": "^2.1.1",
    "rimraf": "^3.0.2",
    "ts-node": "9.0.0",
    "typescript": "4.0.2"
  }
}